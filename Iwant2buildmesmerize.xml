#! /bin/bash
echo Creating directories for building roms.
mkdir ~/AndroidBuilds/
mkdir ~/AndroidBuilds/mesmerizemtd/
echo Creating directories for dropbox uploads.
mkdir ~/Dropbox/
mkdir ~/Dropbox/Mesmerize/
echo Downloading build script and making it executable
cd ~/AndroidBuilds/mesmerizemtd
curl -L -o mesmerizemtd -O -L https://raw.github.com/BrunchSmash/mesmerizemtd_local_manifest/jb/buildscript.xml
      chmod 755 mesmerizemtd
echo Next time run the mesmerizemtd script and you may remove this script
      sleep 6	
      
echo Here we go lets build this thing!
./mesmerizemtd